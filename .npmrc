registry = https://registry.npmjs.org
# registry = https://registry.npmmirror.com
# 用户级配置
prefix=${HOME}/.npm-global    # 全局安装包的路径（默认安装路径）

# Cache 配置
cache=${HOME}/.npm-cache      # 默认缓存目录

# Registry 配置
registry=https://registry.npmjs.org/   # 默认的 npm registry 地址

# 是否使用镜像（一般用于中国用户）
# registry=https://registry.npm.taobao.org/

# 日志级别（默认输出日志级别）
loglevel=warn                 # loglevel 可以设置为 "silent", "error", "warn", "http", "info", "verbose", "silly"

# 默认的包版本范围（每个包的默认版本）
save-exact=true               # 安装时不会自动添加版本范围（例如 `^` 或 `~`），直接安装确切版本

# 工作目录
prefix=${HOME}/.npm-global    # 可以修改全局模块安装的目录位置

# 包管理器缓存目录（默认会在当前目录下生成 .npm 目录）
store-dir=${HOME}/.pnpm-store # pnpm 缓存目录

strict-peer-dependencies=false
auto-install-peers=true
shamefully-hoist=true
